<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ulutsoft.cafe" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".Cafe"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".OrderActivity"
            android:label="@string/title_activity_tables"
            android:launchMode="singleTop" />
        <activity
            android:name=".OrderViewActivity"
            android:label="@string/title_activity_order" />
        <activity
            android:name=".LoginActivity"
            android:label="@string/title_activity_login"
            android:theme="@android:style/Theme.DeviceDefault.Light.Dialog" />
        <activity
            android:name=".UsersActivity"
            android:label="@string/title_activity_users" />
        <activity
            android:name=".NumpadActivity"
            android:label="@string/title_activity_numpad"
            android:theme="@android:style/Theme.DeviceDefault.Light.Dialog.NoActionBar" />
        <activity
            android:name=".NewOrderActivity"
            android:label="@string/title_activity_new_order" >
        </activity>
    </application>

</manifest>
